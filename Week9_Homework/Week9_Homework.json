{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Terrorism Index (2022) - Fatalities Rate",
    "width": 1500,
    "height": 700,
    "projection": {"type": "equalEarth"},
    "data": {
        "url": "https://raw.githubusercontent.com/kfun0006/FIT3179/main/map.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "background": "aliceblue",
    "transform": [
        {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/kfun0006/FIT3179/main/Global%20Terrorism%20Index%202023.xlsx%20-%202022.csv"
                },
                "key": "Country",
                "fields": ["Score", "Rank", "Incidents", "Fatalities"]
            }
        },
        {"calculate": "datum.Incidents / datum.Fatalities + 0.1", "as": "Fatalities_rate"}
    ],
    "mark": {"type": "geoshape", "stroke": "grey"},
    "encoding": {
        "color": {
            "field": "Fatalities_rate",
            "type": "quantitative",
            "scale": {"type": "log"}
        },
        "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Rank", "type": "ordinal"},
            {"field": "Fatalities_rate", "type": "quantitative", "title": "Fatalities Rate"}
        ]
    }
}
