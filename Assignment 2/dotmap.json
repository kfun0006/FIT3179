{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Earthquakes of magnitude 4 or large between 4 Oct 2020 and 10 Oct 2020",
    "projection": {"type": "equalEarth"},
    "transform": [
          {
            "aggregate": [{"op": "sum", "field": "Market Value", "as": "Total Market Value"}],
            "groupby": ["Country"]
          }
        ],
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/kfun0006/FIT3179/main/Assignment%202/map.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/kfun0006/FIT3179/main/Assignment%202/Top%202000%20Companies%20Globally.csv"
        },
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "size": {
            "field": "Total Market Value",
            "type": "quantitative",
            "title": "Total Market Value"
          },
          "color": {
            "field": "Continent",
            "type": "nominal",
            "title": "Continent"
          }
        }
      }
    ]
  }
  